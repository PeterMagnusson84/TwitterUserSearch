@model TweetSearch.ViewModels.TwitterIndexViewModel

@{
    ViewBag.Title = "TweetSearch";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, String.Empty, new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ScreenName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ScreenName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ScreenName, String.Empty, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sök" class="btn btn-default" />
            </div>
        </div>
    </div>

}
       
    @if (Model != null && Model.HasTweets)
    {
        <div id="tweets">
            <h2>Dom senaste tweetsen ifrån @Model.Name</h2>
            @Html.DisplayFor(m => m.Tweets)
        </div>
               
    }




      
